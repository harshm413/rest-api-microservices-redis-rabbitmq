# ============================================
# ChatApp Microservices - Production Environment
# ============================================

# General
NODE_ENV=production

# ============================================
# Security Secrets (GENERATE SECURE VALUES!)
# ============================================
# Generate with: openssl rand -base64 48
JWT_SECRET=GENERATE_A_SECURE_48_CHAR_SECRET_HERE
JWT_REFRESH_SECRET=GENERATE_ANOTHER_SECURE_48_CHAR_SECRET_HERE  
INTERNAL_API_TOKEN=GENERATE_INTERNAL_API_TOKEN_HERE

# JWT Token Expiration
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# Service Ports
# ============================================
GATEWAY_PORT=4000
AUTH_SERVICE_PORT=4003
USER_SERVICE_PORT=4001
CHAT_SERVICE_PORT=4002

# ============================================
# Database URLs (Production - using container names)
# ============================================
AUTH_DB_URL=mysql://chatapp_auth_user:SECURE_PASSWORD_HERE@auth-db:3306/chatapp_auth_service
USER_DB_URL=postgres://chatapp_user:SECURE_PASSWORD_HERE@user-db:5432/chatapp_user_service
MONGO_URL=mongodb://chatapp_mongo_user:SECURE_PASSWORD_HERE@mongo:27017/chatapp_chat_service?authSource=admin
REDIS_URL=redis://redis:6379
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672

# ============================================
# Database Configuration
# ============================================
# MongoDB
MONGO_INITDB_ROOT_USERNAME=chatapp_mongo_user
MONGO_INITDB_ROOT_PASSWORD=SECURE_MONGO_PASSWORD_HERE

# PostgreSQL
USER_DB_NAME=chatapp_user_service
USER_DB_USER=chatapp_user
USER_DB_PASSWORD=SECURE_POSTGRES_PASSWORD_HERE

# MySQL
AUTH_DB_NAME=chatapp_auth_service
AUTH_DB_USER=chatapp_auth_user
AUTH_DB_PASSWORD=SECURE_MYSQL_PASSWORD_HERE
AUTH_DB_ROOT_PASSWORD=SECURE_MYSQL_ROOT_PASSWORD_HERE